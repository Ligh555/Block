<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".touch.TouchActivity">

    <com.ligh.block.source.touch.TestFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.ligh.block.source.touch.TestFrameLayout1
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <com.ligh.block.source.touch.TestFrameLayout2
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/design_default_color_on_primary"/>

        <com.ligh.block.source.touch.TestFrameLayout3
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/cardview_dark_background"/>

    </com.ligh.block.source.touch.TestFrameLayout>

    <com.ligh.block.source.touch.TestTouchViewGroup
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/teal_200">
        <com.ligh.block.source.touch.TestTouchView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/purple_200"/>
    </com.ligh.block.source.touch.TestTouchViewGroup>



</LinearLayout>